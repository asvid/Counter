<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardUseCompatPadding="true"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
      <TextView
          android:id="@+id/name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="5dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="ITEM NAME"
          android:textColor="@color/colorAccent"
          android:textSize="@dimen/counterName"
          android:transitionName="counterNameTransition"
          />
      <TextView
          android:id="@+id/changeDate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_weight="1"
          android:ellipsize="end"
          android:maxLines="1"
          android:text="ITEM NAME"
          android:textColor="@color/md_grey_500"
          android:textSize="@dimen/counterChangeDateSize"
          android:transitionName="counterChangeDateTransition"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:gravity="center_vertical"
          >

        <com.mikepenz.iconics.view.IconicsButton
            android:id="@+id/decrementButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="{faw-minus-square-o}"
            android:textColor="@color/md_grey_900"
            android:textSize="20dp"
            style="@style/ListButton"
            />
        <TextView
            android:id="@+id/value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="8"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            />
        <com.mikepenz.iconics.view.IconicsButton
            android:id="@+id/incrementButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="{faw-plus-square-o}"
            android:textColor="@color/md_grey_900"
            android:textSize="20dp"
            style="@style/ListButton"
            />
      </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_grey_100"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        >

      <Button
          android:id="@+id/detailsButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="more"
          android:textColor="@color/colorAccent"
          style="?android:borderlessButtonStyle"
          />
      <Button
          android:id="@+id/editButton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentTop="true"
          android:layout_toEndOf="@+id/detailsButton"
          android:text="edit"
          android:textColor="@color/colorAccent"
          style="?android:borderlessButtonStyle"
          />
      <com.mikepenz.iconics.view.IconicsButton
          android:id="@+id/deleteButton"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentTop="true"
          android:layout_gravity="end"
          android:text="{faw-trash-o}"
          android:textColor="@color/md_grey_500"
          style="@style/iconButton"
          />
    </RelativeLayout>
  </LinearLayout>

</android.support.v7.widget.CardView>