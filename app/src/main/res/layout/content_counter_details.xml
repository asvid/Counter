<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="asvid.counter.modules.counter_details.CounterDetailsActivity"
    tools:showIn="@layout/activity_counter_details"
    >
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="10dp"
      >
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/changesChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/changesList"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      />
  <TextView
      android:id="@+id/emptyChangesText"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:color="@color/md_black"
      android:gravity="center"
      android:text="@string/no_changes_yet"
      android:textColor="@color/colorAccent"
      android:visibility="gone"
      />
</LinearLayout>
