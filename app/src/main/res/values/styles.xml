<resources>

  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:textColorSecondary">@color/secondaryText</item>
  </style>

  <style name="ListButton">
    <item name="android:layout_margin">0dp</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:layout_width">30dp</item>
  </style>

  <style name="TextShadow">
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
  </style>


  <style name="dialogEditText">
    <item name="android:textColor">#000000</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="iconButton" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:layout_width">@dimen/iconButtonWidth</item>
  </style>

  <style name="dateTimeTextView" parent="TextAppearance.Design.Counter">

  </style>

  <dimen name="iconButtonWidth">44dp</dimen>
</resources>
